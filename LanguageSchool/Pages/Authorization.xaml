<Page x:Class="LanguageSchool.Pages.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LanguageSchool.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Authorization">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock>Администратору необходимо ввести пароль</TextBlock>
            
            <PasswordBox x:Name="PasswordPB" ></PasswordBox>
            <Button x:Name="EnterBTN" Click="EnterBTN_Click">Войти</Button>
        </StackPanel>
    </Grid>
</Page>
